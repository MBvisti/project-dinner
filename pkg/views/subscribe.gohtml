{{define "render"}}
    <div class="flex flex-col px-8 my-auto w-full md:px-20 md:items-center md:my-auto lg:flex-row md:justify-between lg:px-auto lg:justify-around" x-data="submitHandler()" x-init="isSubscribeSuccessful()">
        <div style="display: none" data-subscribe-success class="mb-4 shadow border rounded border-green-300 w-full p-2 md:p-4">
            <p class="text font-bold md:text-center">Thanks for subscribing!</p>
        </div>
